<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quicklistv_01.SegundaPantallas.StatsActivity">

    <TextView
        android:id="@+id/ly_nombres"
        android:text="Estadisticas Semanales"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <GridView
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_below="@+id/ly_nombres"
            android:id="@+id/gridView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:columnWidth="150dp"
            android:numColumns="4"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:stretchMode="none"
            android:gravity="center">
        </GridView>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/ly_nombres"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:id="@+id/rvMeses"
        android:divider="@drawable/barra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:id="@+id/btn_semanal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:backgroundTint="@color/colorAccent"
            android:text="Mensual"
            android:layout_width="0dp"
            android:onClick="btnSemanal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_date_range_white_24dp"/>
        <ImageButton
            android:id="@+id/btn_mensual"
            android:src="@drawable/ic_event_white_24dp"
            android:backgroundTint="@color/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="Semanal"
            android:onClick="btnMensuales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             />

    </LinearLayout>

</RelativeLayout>
