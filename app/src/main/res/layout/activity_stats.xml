                    android:stretchMode="none"
                    android:verticalSpacing="8dp"></GridView>

                <TextView
                    android:id="@+id/tvNoviembre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noviembre"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <GridView
                    android:layout_marginTop="15dp"
                    android:id="@+id/gvNoviembre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNoviembre"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:columnWidth="150dp"
                    android:gravity="center"
                    android:horizontalSpacing="8dp"
                    android:numColumns="4"
                    android:stretchMode="none"
                    android:verticalSpacing="8dp"></GridView>

                <TextView
                    android:id="@+id/tvDiciembre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diciembre"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <GridView
                    android:layout_marginTop="15dp"
                    android:id="@+id/gvDiciembre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDiciembre"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:columnWidth="150dp"
                    android:gravity="center"
                    android:horizontalSpacing="8dp"
                    android:numColumns="4"
                    android:stretchMode="none"
                    android:verticalSpacing="8dp"></GridView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent">

        <ImageButton
            android:id="@+id/btn_semanal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:onClick="btnSemanal"
            android:src="@drawable/ic_date_range_white_24dp"
            android:text="Mensual" />

        <ImageButton
            android:id="@+id/btn_mensual"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:onClick="btnMensuales"
            android:src="@drawable/ic_event_white_24dp"
            android:text="Semanal" />

    </LinearLayout>


</RelativeLayout>