<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quicklistv_01.SegundaPantallas.StatsActivity">



        <LinearLayout
            android:id="@+id/ly_semanales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/actionBarSize"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/ly_nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:text="Estadisticas Semanales"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ly_nombres"
                android:layout_marginBottom="?attr/actionBarSize"
                android:columnWidth="150dp"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:numColumns="4"
                android:stretchMode="none"
                android:verticalSpacing="8dp"></GridView>
            </ScrollView>

        </LinearLayout>



    <LinearLayout
        android:id="@+id/ly_meses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/ly_mensuales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:text="Estadisticas Mensuales"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lyMeses"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ly_meses"
                android:orientation="vertical">

                <TextView
