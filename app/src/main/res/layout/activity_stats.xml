                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvJunio"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:columnWidth="150dp"
                    android:gravity="center"
                    android:horizontalSpacing="8dp"
                    android:numColumns="4"
                    android:stretchMode="none"
                    android:verticalSpacing="8dp"></GridView>

                <TextView
                    android:id="@+id/tvJulio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Julio"
                    android:textAlignment="center"
                    android:textSize="25sp" />


                <GridView
                    android:layout_marginTop="15dp"
                    android:id="@+id/gvJulio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvJulio"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:columnWidth="150dp"
                    android:gravity="center"
                    android:horizontalSpacing="8dp"
                    android:numColumns="4"
                    android:stretchMode="none"
                    android:verticalSpacing="8dp"></GridView>

                <TextView
                    android:id="@+id/tvAgosto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agosto"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <GridView
                    android:layout_marginTop="15dp"
                    android:id="@+id/gvAgosto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAgosto"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:columnWidth="150dp"
                    android:gravity="center"
                    android:horizontalSpacing="8dp"
                    android:numColumns="4"
                    android:stretchMode="none"
                    android:verticalSpacing="8dp"></GridView>

                <TextView
                    android:id="@+id/tvSeptiembre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Septiembre"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <GridView
                    android:layout_marginTop="15dp"
                    android:id="@+id/gvSeptiembre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSeptiembre"
                    android:layout_marginBottom="?attr/actionBarSize"
