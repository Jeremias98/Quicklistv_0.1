<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/curso"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:text="7°3°"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40sp"

            android:transitionName="trans_animation" />

        <ImageButton
            android:id="@+id/btn_favorito"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignRight="@+id/curso"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="175dp"
            android:clickable="true"
            android:background="@drawable/shape2"
            android:src="@drawable/ic_favorite_white_24dp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lyTomar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/list" />


        <TextView
            android:id="@+id/tomar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Tomar Asistencia"
            android:textSize="15sp"
            android:textStyle="italic"
            android:transitionName="transi_animation" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyMod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cambiar" />

        <TextView
            android:id="@+id/cambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Modificar Asistencia"
            android:textSize="15sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lySub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/addl" />

        <TextView
            android:id="@+id/crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Mostrar Subgrupos"

            android:textSize="15sp"
            android:textStyle="italic" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/book_open" />

        <TextView
            android:id="@+id/stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Mostrar Estadisticas"

            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>